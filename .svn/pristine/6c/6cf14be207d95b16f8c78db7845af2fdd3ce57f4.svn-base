	//联动菜单
	public function Linkage(){
		
		
		
		$id = $_POST['id'];
		
		$type = $_POST['type'];
		
		$list=M('area')->where(array('parent_id'=>$id))->select();
		
		
		if($type==1){
			$str="<option value=0 >请选择市</option>";
		}else if($type==2){
			$str="<option value=0 >请选择区</option>";
		}
		
		foreach ($list as $v) {
			$str.="<option value='{$v['region_id']}'>{$v['region_name']}</option>";
		}
		echo $str;
		

	}
	
	
	
